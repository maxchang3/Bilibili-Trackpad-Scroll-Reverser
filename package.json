{
  "name": "bili-scroll-reverser",
  "version": "3.0.2",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build && vite build --mode min",
    "build:min": "vite build --mode min",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "dev": "vite",
    "lint": "biome check",
    "lint:fix": "biome check --write .",
    "preview": "vite preview",
    "release": "bumpp"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "lint-staged": {
    "*": "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@maxchang/biome-config": "^0.1.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^20.19.25",
    "bumpp": "^10.3.2",
    "simple-git-hooks": "^2.13.1",
    "svelte": "^5.45.3",
    "svelte-check": "^4.3.4",
    "svelte-preprocess": "^6.0.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-plugin-monkey": "^7.1.5"
  }
}
